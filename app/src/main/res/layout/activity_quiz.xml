<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/dark2Purple"
    android:orientation="vertical"
    tools:context=".quiz.QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            tools:text="Question 7/20"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:id="@+id/questionIndicator"/>
        
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_timer"
                app:tint="@color/white"
                android:layout_toStartOf="@+id/timerIndicator"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5.46"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"
            android:id="@+id/timerIndicator"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        tools:progress="40"
        app:indicatorColor="#8903FF"
        android:id="@+id/questionProgress"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:elevation="4dp"
        android:background="@color/dark2Purple">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark2Purple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark2Purple"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/questionTv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/darkPurple"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="what is os?">

                </TextView>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="#9F4BFF"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Ans A" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="#9F4BFF"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Ans A" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="#9F4BFF"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Ans A" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="#9F4BFF"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Ans A" />

                <Button
                    android:id="@+id/nxtBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="@color/purple"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="12dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>